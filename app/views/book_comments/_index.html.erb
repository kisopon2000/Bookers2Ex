<div class="comments-table">
  <table>
    <tbody>
      <% book.book_comments.each do |book_comment| %>
        <tr>
          <td>
            <div>
              <%= link_to user_path(book_comment.user.id) do %>
                <% if book_comment.user.profile_image.attached? %>
                  <%= image_tag book_comment.user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'default-image', size: "80x80" %>
                <% end %>
                <br>
                <%= book_comment.user.name %>
              <% end %>
            </div>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
          <% if book_comment.user == current_user %>
            <td>
              <%= link_to "Destroy", book_book_comment_path(book.id, book_comment.id), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか？", remote: true %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>