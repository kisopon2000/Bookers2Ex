<% if user_signed_in? %>
  <div class="search-forms">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <div class="search-right mr-3">
        <div class="search-word">
          <%= f.text_field :word, class:"form-control form-control-sm" %>
        </div>
        <div>
          <%= f.select :range, options_for_select([['User'], ['Book']]), {}, {class: 'search-select'} %>
        </div>
        <div>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]), {}, {class: 'search-select'} %>
        </div>
        <div>
          <%= f.submit "検索" %>
        </div>
      </div>
    <% end %>
    
    <%= form_with url: searchtag_path, local: true, method: :get do |f| %>
      <div class="search-right">
        <div class="search-word">
          <%= f.text_field :word, class:"form-control form-control-sm" %>
        </div>
        <div>
          <%= f.submit "タグ検索" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
