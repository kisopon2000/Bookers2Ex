<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Group</h1>
      
      <% if @group.errors.any? %>
        <div class="error_explanation">
          <h3>
            <%= @group.errors.count %> errors prohibited this obj from being saved:
          </h3>
          <ul>
            <% @group.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "グループ名" %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :introduction, "紹介文" %>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :group_image, "グループ画像" %>
          <%= f.file_field :group_image, class:"form-control-file" , accept: "image/*" %>
        </div>
      
        <div class="form-group">
          <%= f.submit "Update Group", class: 'btn btn-info' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
