<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render "layouts/sidebar", user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Groups</h2>
      
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td>
                <% if group.group_image.attached? %>
                  <%= image_tag group.group_image, size: "80x80" %>
                <% else %>
                  <%= image_tag "default-image", size: "80x80" %>
                <% end %>
              </td>
              <td>
                <%= link_to group.name, group_path(group.id) %>
              </td>
              <td>
                <%= group.introduction %>
              </td>
              <td>
                <%= group.group_users.count %>
              </td>
              <td>
                <% if group.is_owned_by?(current_user) %>
                  <%= link_to "Edit", edit_group_path(group.id), class:"btn btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
